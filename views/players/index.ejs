<h1 class="text-center display-6 mb-5">Player List</h1>

<% if (players.length == 0) { %>
    <p class="lead">There are no players in this leaugue yet.</p>
<% } else { %>

    <div class="row">
        <div class="col">
            <table class="table table-striped border fs-6">
                <thead class="bg-dark text-light">
                    <tr>
                        <th>Name</th>
                        <th>Born</th>
                        <th>From</th>
                        <th>Position</th>
                        <th>Team</th>
                        <th>Jersey</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% players.forEach(player => { %>
                        <tr>
                            <td><%= player.fullname%> </td>
                            <td><%= player.born %> </td>
                            <td><%= player.place_of_birth %> </td>
                            <td>
                                <% player.position.forEach(p => { %>
                                    <%= p + ' ' %>
                                <% }) %> 
                            </td>
                            <td><%= player.parent().fullname %> </td>
                            <td>#<%= player.jersey %> </td>

                            <td>
                                <a href="/players/<%= player._id %>/update">
                                    <img src="/images/icon-update.png" alt="icon-update">
                                </a>
                            </td>

                            <td>
                                <a href="/players/<%= player._id %>/delete">
                                    <img src="/images/icon-delete.png" alt="icon-delete">
                                </a>
                            </td>

                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>



<% } %>
    
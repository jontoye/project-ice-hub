<h1 class="display-6 mb-3 text-center">Add New Player</h1>

<div class="row justify-content-center">
    <div class="col-6">
        <form action="/players" method="post">

            <div class="form-group">
                <label class="form-label">First Name</label>
                <input class="form-control" name="first_name" type="text" required>
            </div>
            <div class="form-group">
                <label class="form-label">Last Name</label>
                <input class="form-control" name="last_name" type="text" required>
            </div>
            <div class="form-group">
                <label class="form-label">Date of Birth</label>
                <input class="form-control" name="date_of_birth" type="date" value="2000-01-01" required>
            </div>
            <div class="form-group">
                <label class="form-label">Place of Birth</label>
                <input class="form-control" name="place_of_birth" type="text" required>
            </div>
            <div class="form-group">
                <label class="form-label">Position (Select all that apply)</label>
                <select class="form-select" name="position" multiple>
                    <option value="C">Centre</option>
                    <option value="LW">Left Wing</option>
                    <option value="RW">Right Wing</option>
                    <option value="D">Defence</option>
                    <option value="G">Goalie</option>
                </select>
            </div>
            <div class="form-group">
                <label class="form-label">Jersey Number</label>
                <input class="form-control" name="jersey" type="number" min="1" max="99">
            </div>
            <div class="form-group">
                <label class="form-label">Team</label>
                <select class="form-select" name="team">
                    <% teams.forEach(team => { %>
                        <option value="<%= team._id %>"><%= team.city + ' ' + team.name %> </option>
                    <% }) %>
                </select>
            </div>
        
            <button class="btn btn-primary btn-dark my-3" type="submit">Add Player</button>
        </form>
    </div>
</div>
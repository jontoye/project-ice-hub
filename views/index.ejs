
<section class="section-main container">

    <% if (!user) { %>
        <div class="row section-main__hero mb-5">
            <div class="col-8 mx-auto">
                <div class="d-flex flex-column justify-content-center align-items-center" style="height:400px">
                    <p class="display-4 text-center">League management for pros.</p>
                    <p class="lead">Check out our free demo.</p>
            
                    <div class="d-flex gap-3">
                        <a href="/auth/register" class="btn btn-primary btn-dark btn-lg">Register</a>
                        <a class="btn btn-secondary btn-light btn-lg">Demo</a>
                    </div>
                </div>
            </div>
        </div>    
    <% } %>


    <div class="content section-main__events">
        <div class="mb-3">
            <h3 class="display-6">Events</h3>
            <p class="lead">Whats going on</p>
        </div>
    </div>

    <hr>

    <div class="content section-main__spotlight">
        <div class="mb-3">
            <h3 class="display-6">Player Spotlight</h3>
            <p class="lead">Keep an eye out for these rising stars</p>
        </div>
    </div>

    <hr>

    <div class="content section-main__news">
        <div class="mb-3">
            <h3 class="display-6">NHL News</h3>
            <p class="lead">The latest updates from the NHL</p>  
        </div>
    
		<% if (articles) { %>
			<% articles.forEach(article => { %>
				<div class="card mb-5 py-4 px-5">
					<div class="row g-0">
						<div class="col-md-2 d-flex justify-content-center p-3">
						<img src="<%= article.Logo %> " class="img-fluid rounded-start" alt="Team Logo">
						</div>
						<div class="col-md-10">
						<div class="card-body">
							<h4 class="card-title mb-3"><%= article.Title %> </h5>
							<p class="card-text"><%= article.Content %> </p>
							<p class="card-text"><small class="text-muted">Last updated <%= article.Updated %> </small></p>
						</div>
						</div>
					</div>
				</div>
			<% }) %>
		<% } %>
    </div>

</section>